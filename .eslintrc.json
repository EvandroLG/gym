{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },

  "plugins": [
    "react"
  ],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "indent": [
      "error", 2
    ],

    "react/prop-types": 0
  }
}
